{
  "name": "game",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "type": "module",
  "scripts": {
    "start": "bun run packages/app/src/server.ts",
    "dev": "DEV_MODE=true bun --watch run packages/app/src/server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "format": "bun oxfmt",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@socket.io/bun-engine": "^0.1.0",
    "@tanstack/react-query": "^5.90.16",
    "bun-plugin-tailwind": "^0.1.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "oxfmt": "^0.22.0",
    "oxlint": "^1.37.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
